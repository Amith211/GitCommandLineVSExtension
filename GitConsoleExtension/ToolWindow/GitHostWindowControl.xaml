<UserControl x:Class="GitConsoleExtension.GitHostWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid Name="RootGrid">
        <StackPanel Name="InfoStackpanel" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
            <Button Content="选择Mintty" Width="100" Height="30" Click="Select_Mintty_clicked"/>
            <TextBlock Foreground="{DynamicResource VsBrush.WindowText}" TextWrapping="Wrap" Margin="20" Text="请先选择Mintty程序，该程序一般在Git安装目录下，例如Git/usr/bin"/>
        </StackPanel>
    </Grid>
</UserControl>
